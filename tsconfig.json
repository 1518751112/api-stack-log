{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
